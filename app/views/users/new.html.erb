
<div class="signup-container">
  <%= form_with url: "/signup" do |f| %>
    <div class="signup-content">
      <%= f.label :名前,class: "signup-label"%>
      <br>
      <%= f.text_field :name,class: "signup-area" %>
    </div>
    <div class="signup-content">    
      <%= f.label :メールアドレス,class: "signup-label" %>
      <br>
      <%= f.text_field :email,class: "signup-area" %>
    </div>
    <div class="signup-content">
      <%= f.label :パスワード,class: "signup-label" %>
      <br>
      <%= f.password_field :password,class: "signup-area" %>
    </div>
    <div class="signup-content">
      <%= f.label :確認用パスワード,class: "signup-label" %>
      <br>
      <%= f.password_field :password2,class: "signup-area" %>
    </div>
    <div class="button-container">
      <%= f.submit :登録,class: "button" %>
    </div>
  <% end %>
</div>